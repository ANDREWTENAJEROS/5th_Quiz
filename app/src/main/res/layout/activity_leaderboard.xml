<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightTan"
    tools:context="com.android.andrewtenajeros.bugtongbugtong.leaderboard">


    <Button
        android:id="@+id/button_changeusername"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/fredoka_one"
        android:text="Change Player"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_changeusername2"
        app:layout_constraintEnd_toEndOf="@+id/button_playagain"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_changeusername2"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/fredoka_one"
        android:onClick="clearstats"
        android:text="CLEAR STATS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_playagain"
        app:layout_constraintTop_toBottomOf="@+id/listView_tally" />

    <Button
        android:id="@+id/button_playagain"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/fredoka_one"
        android:text="PLAY AGAIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/listView_tally"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toTopOf="@+id/button_changeusername2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fredoka_one"
        android:text="High Scores"
        android:textAlignment="center"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/listView_tally"
        app:layout_constraintEnd_toEndOf="@+id/listView_tally"
        app:layout_constraintStart_toStartOf="@+id/listView_tally"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
